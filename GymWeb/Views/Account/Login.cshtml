@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>GymWeb Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-white d-flex align-items-center justify-content-center" style="height: 100vh;">

<div class="card p-4 bg-secondary text-white" style="width: 400px;">
    <h3 class="text-center mb-4">🔐 Intrarea în Sistem</h3>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">
            @ViewBag.Error
        </div>
    }

    <form method="post" action="/Account/Login">
        <div class="mb-3">
            <label>Username</label>
            <input type="text" name="username" class="form-control" placeholder="User" required />
        </div>
            
        <div class="mb-3">
            <label>Password</label>
            <input type="password" name="password" class="form-control" placeholder="Parola" required />
        </div>

        <button type="submit" class="btn btn-warning w-100 fw-bold">Login</button>
    </form>
    
    <div class="mt-3 text-center">
        <a href="/Account/Register" class="text-warning text-decoration-none fw-bold">
            Nu ai cont? Fă-ți unul aici! 📝
        </a>
    </div>
    <div class="mt-4 text-center small text-light border-top pt-2">
        <p class="mb-0">Admin default: admin / admin</p>
        <p class="mb-0">Client default: client / client</p>
    </div>
</div>

</body>
</html>