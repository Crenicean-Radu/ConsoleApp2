@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <title>Înregistrare GymWeb</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-white d-flex align-items-center justify-content-center" style="height: 100vh;">

<div class="card p-4 bg-secondary text-white" style="width: 400px;">
    <h3 class="text-center mb-4">📝 Cont Nou</h3>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-warning text-center">@ViewBag.Error</div>
    }

    <form method="post" action="/Account/Register">
        <div class="mb-3">
            <label>Alege Username</label>
            <input type="text" name="username" class="form-control" required />
        </div>
            
        <div class="mb-3">
            <label>Alege Parola</label>
            <input type="password" name="password" class="form-control" required />
            <small class="text-warning opacity-75">
                * Minim 8 caractere, o majusculă și o cifră
            </small>
        </div>

        <button type="submit" class="btn btn-success w-100 fw-bold">Creează Cont</button>
    </form>
        
    <div class="mt-3 text-center">
        <a href="/Account/Login" class="text-light">Ai deja cont? Intră aici.</a>
    </div>
</div>

</body>
</html>