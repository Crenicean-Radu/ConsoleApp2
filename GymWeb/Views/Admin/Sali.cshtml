@model List<GymWeb.Entities.Sala>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>🏢 Gestiune Săli</h1>
</div>

@if (TempData["Eroare"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        🛑 @TempData["Eroare"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Succes"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        ✅ @TempData["Succes"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card p-3 mb-4 border-primary shadow-sm">
    <h5 class="text-primary">➕ Adaugă Sală Nouă</h5>
    <form action="/Admin/AdaugaSala" method="post" class="row g-3">
        <div class="col-md-5">
            <input type="text" name="nume" class="form-control" placeholder="Nume Sală" required>
        </div>
        <div class="col-md-5">
            <input type="text" name="program" class="form-control" placeholder="Program (ex: 08:00 - 22:00)" required>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100 fw-bold">Adaugă</button>
        </div>
    </form>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Nume</th>
                <th>Program</th>
                <th style="width: 200px;">Acțiuni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sala in Model)
            {
                <tr>
                    <td>
                        <form action="/Admin/ModificaSala" method="post" id="edit-@sala.Id" class="d-flex gap-2">
                            <input type="hidden" name="id" value="@sala.Id" />
                            <input type="text" name="nume" value="@sala.Nume" class="form-control form-control-sm" />
                        </form>
                    </td>
                    <td>
                        <input type="text" name="program" form="edit-@sala.Id" value="@sala.Program" class="form-control form-control-sm" />
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <button type="submit" form="edit-@sala.Id" class="btn btn-success" title="Salvează Modificări">💾</button>
                            <a href="/Admin/StergeSala?id=@sala.Id" class="btn btn-danger" onclick="return confirm('Sigur demolezi sala?');" title="Șterge">🗑️</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>