@model GymWeb.Entities.Client

<h1>👤 Profilul Meu: @Model.Username</h1>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        📣 @TempData["Msg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card border-primary mb-3">
            <div class="card-header bg-primary text-white">💳 Abonamentele Mele</div>
            <div class="card-body">
                @if (Model.Abonamente.Count == 0)
                {
                    <p class="text-muted">Nu ai niciun abonament activ.</p>
                    <a href="/Client/Cumpara" class="btn btn-sm btn-outline-primary">Ia unul acum</a>
                }
                else
                {
                    <ul class="list-group">
                        @foreach(var ab in Model.Abonamente)
                        {
                            string status = ab.EsteActiv() ? "🟢 Activ" : "🔴 Expirat";
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">@ab.NumeOferta</h6>
                                    <small class="text-muted">@ab.NumeSala</small>
                                </div>
                                <span class="badge bg-light text-dark border">@status</span>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card border-warning mb-3">
            <div class="card-header bg-warning text-dark">📅 Rezervările Mele</div>
            <div class="card-body">
                @if (Model.RezervariIstoric.Count == 0)
                {
                    <p class="text-muted">Nu ai rezervat nimic. Hai la sală!</p>
                }
                else
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Clasa</th>
                                <th>Data Rezervării</th>
                                <th>Acțiune</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var r in Model.RezervariIstoric)
                            {
                                <tr>
                                    <td>@r.NumeClasa</td>
                                    <td>@r.DataRezervare.ToShortDateString()</td>
                                    <td>
                                        <a href="/Client/Anuleaza?rezervareId=@r.Id" class="btn btn-xs btn-danger" onclick="return confirm('Sigur anulezi?');">❌</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>